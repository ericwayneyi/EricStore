<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        p {
            display: none;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("United Shoes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Product", "Index", "Product")</li>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Logout", "Logout", "LogIn")
                    }
                    else
                    {

                    <li>@Html.ActionLink("Register", "Index", "Registration")</li>
                    <li>@Html.ActionLink("Log In", "Index", "SignIn")</li>
                    }

                </ul>
            </div>
        </div>
    </div>

    @*@if (User.Identity.IsAuthenticated)
    {
        <div class="pull-right">Welcome @User.Identity.Name</div>
        @Html.ActionLink("Logout", "Logout", "LogIn")
    }
    else
    {
        @Html.ActionLink("Register", "Index", "Register")
        @Html.ActionLink("LogIn", "LogIn", "Register")
    }*@


    <div>
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Eric Yi Industries, LLC 2016</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
