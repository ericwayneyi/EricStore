@model EricStore.Models.RegistrationModel
@{
    ViewBag.Title = "Registration";
}

<head>

    <style>
        .fullpicture {
            width: 100%;
            height: 100vh;
            background: url("/Images/hero-img3.jpg") center center no-repeat;
            background-size: cover;
            margin-top: -17px;
        }

        .row {
            width: 25%;
            height: 80vh;
            margin-left: 1%;
            margin-top: 5%;
            border: solid 1.5px;
            border-radius: 10px;
            background-color: white;
            opacity: 0.7;
            
        }

        .Email {
            margin: 5%;
        }

        .Password {
            margin: 3%;
        }

        .btn {
            margin-left: 27%;
            margin-top: 10%;
        }

        h2 {
            text-align: center;
        }
    </style>
</head>
<div class="fullpicture">


    <section class="row">

        @using (Html.BeginForm())
        {

            @Html.ValidationSummary(false)


            <h2>Registration</h2>
            <hr />
            <div class="Email">
                @Html.LabelFor(m => m.Email)
                @Html.EditorFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="Password">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <input type="submit" title="Register User" class="btn btn-primary" />





        }
    </section>

</div>
